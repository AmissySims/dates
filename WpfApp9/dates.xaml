<Page x:Class="WpfApp9.dates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="dates">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Имя"/>
                <TextBox  x:Name="NameTb" Width="100" PreviewTextInput="NameTb_PreviewTextInput"/>
                <TextBlock Text="Дата рождения"/>
                <TextBox  x:Name="DateTb" Width="100" PreviewTextInput="DateTb_PreviewTextInput" />
                <Button x:Name="GenBt" Content="генерация" Click="GenBt_Click"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Логин"/>
                <TextBlock x:Name="Logintb"/>
                <TextBlock Text="пароль"/>
                <TextBlock x:Name="Pastb"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
